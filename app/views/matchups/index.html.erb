 <%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
<h3 id="create_matchup"><%= link_to "Create a Matchup", new_matchup_path %></h3>

<div class="matchups_container">

    <div class="row row-centered">

      <% @matchups.each do |matchup| %>

        <a href="/matchups/<%= matchup.id %>">
          <div class="col-xs-6 col-centered col-fixed matchup_blocks">
            <h3> <%= matchup.name %></h3>
          <h4>Competitors</h4>
            <% matchup.competitors.each.with_index(1) do |comp, idx| %>
              <%= comp.name %>
              <%= "vs." unless idx == matchup.competitors.length %>
            <% end %><br>
          <h4>Type</h4>
          <%= matchup.matchup_type.name %><br>
          <h4>Matchup Date</h4>
          <%= matchup.deadline.ctime %><br>
        </div>
      </a>

      <% end %>

    </div>

</div>

<div>
  <%= column_chart({"Pie Eating"=>2, "Rock, Paper, Scissors"=>5, "Wrestling of the Arms"=>3, "Issa Race"=>3} ,
  {library: {hAxis: {title: "Number of Matches"}, vAxis: {title: "Type of Matches"}}}) %>
</div>

